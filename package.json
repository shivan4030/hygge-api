{
  "name": "node-api-starter",
  "version": "1.0.2",
  "description": "Babel 7 Node API Starter",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src -d build",
    "coverage": "jest --coverage",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "pretty-lint": "prettier 'src/**/*.js' --write && eslint 'src/**/*.js' --fix && git add .",
    "serve": "node build/index.js",
    "start": "nodemon --exec babel-node src/index.js",
    "test": "jest"
  },
  "keywords": [
    "Node",
    "API",
    "Babel 7",
    "starter"
  ],
  "author": "Nick Jurista <nick@inexact-scientist.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.js": [
      "prettier 'src/**/*.js' --write",
      "eslint 'src/**/*.js' --fix",
      "git add"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**.js",
      "!src/index.js",
      "!src/express/**",
      "!src/**/routes.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/halfmanhalfdonut/node-api-starter"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/node": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-macros": "^2.4.0",
    "codegen.macro": "^3.0.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.0.0-rc.14",
    "jest": "^29.3.1",
    "jest-express": "^1.6.1",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "glob": "^7.1.3",
    "helmet": "^3.13.0",
    "morgan": "^1.9.1",
    "rotating-file-stream": "^1.3.7",
    "aion-web3": "^1.1.4",
    "aion-web3-eth-accounts": "^1.1.0",
    "bignumber.js": "^7.2.1"
  }
}
